<h4>Lists</h4>
<ul>
  <% @lists.each do |list| %>
    <li>
      <%= list.name %> <%= list.items_count %>
      <ul>
        <% list.items.each do |item| %>
          <li><%= item.name %></li>
        <% end %>
      </ul>
      <%= form_tag list_items_path(list), remote: true do %>
        <div class="form-group">
          <%= text_field_tag 'item[name]', nil, class: 'form-control', placeholder: 'Item name' %>
        </div>
        <div class="form-group">
          <%= submit_tag 'add item', class: 'btn btn-success' %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>