<!-- Create List Modal -->
<div class="modal fade" id="share-user-modal" tabindex="-1" role="dialog" aria-labelledby="share-user-label" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="share-user-label">Share to user</h4>
      </div>
      <div class="modal-body">
        <%= form_tag(list_authorizations_path, method: :post, remote: true) do %>
          <%= hidden_field_tag :list_id, @list.id %>
          <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'User Email' %>
          <%= submit_tag 'Add user', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>